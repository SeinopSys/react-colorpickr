{
  "name": "@seinopsys-forks/react-colorpickr",
  "version": "9.0.0",
  "description": "A React colorpicker",
  "main": "dist/colorpickr.js",
  "scripts": {
    "format": "prettier --single-quote --print-width=100 --write 'src/**/*.js'",
    "test": "eslint src && jest",
    "jest-watch": "jest --watch",
    "start": "budo example/index.tsx --dir example --serve=bundle.js --live -d -- -p tsify -t [ babelify --global ] -t [ reactify -x tsx ]",
    "prepublishOnly": "rm -rf dist && babel src -d dist && cp example/colorpickr.css dist/colorpickr.css",
    "build": "browserify -p tsify -t babelify -t [ reactify -x tsx ] example/index.tsx | uglifyjs -c -m > example/bundle.js",
    "prepare": "husky install"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:mapbox/react-colorpickr.git"
  },
  "keywords": [
    "react",
    "ui",
    "color"
  ],
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true
  },
  "babel": {
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "sourceMaps": true,
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ]
  },
  "author": "mapbox",
  "license": "ISC",
  "dependencies": {
    "@seinopsys-forks/react-themeable": "^2.0.0",
    "clamp": "^1.0.1",
    "color": "^3.1.3",
    "color-string": "^1.5.5",
    "tsify": "^5.0.4"
  },
  "peerDependencies": {
    "prop-types": ">=15.7.2",
    "react": ">=16.8.0",
    "react-dom": ">=16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.13.15",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.3",
    "@types/clamp": "^1.0.0",
    "@types/color": "^3.0.1",
    "@types/color-string": "^1.5.0",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "babel-eslint": "^10.1.0",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "budo": "^11.6.4",
    "eslint": "^7.24.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^27.0.3",
    "jest-cli": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-test-renderer": "^17.0.2",
    "reactify": "^1.1.1",
    "ts-jest": "^27.0.1",
    "typescript": "^4.3.2",
    "uglify-js": "^3.13.4"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint src",
      "prettier --write",
      "git add"
    ]
  }
}
